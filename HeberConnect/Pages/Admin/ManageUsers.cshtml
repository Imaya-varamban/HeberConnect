@page
@model HeberConnect.Pages.Admin.ManageUsersModel
@{
    Layout = "_LayoutAdmin";
}
<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr><th>Email</th><th>Roles</th></tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Users)
        {
            <tr>
                <td>@u.Email</td>
                <td>
                    @string.Join(", ", Model.UserRoles[u.Id])
                </td>
            </tr>
        }
    </tbody>
</table>
